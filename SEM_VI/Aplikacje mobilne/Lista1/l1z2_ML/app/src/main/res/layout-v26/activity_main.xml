<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/has_o"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" android:textSize="24sp" android:textAlignment="center"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:ems="10"
            android:id="@+id/letterInput" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/divider" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.577"
            android:textAlignment="center"
            android:maxLength="1" android:textAllCaps="true" android:autofillHints=""/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="18sp"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/letterInput"/>
    <Button
            android:text="@string/sprawd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/letterInput"
            android:textSize="18sp" android:textAlignment="center"
    android:onClick="checkLetter"/>
    <TextView
            android:text="@string/wylosuj_has_o"
            android:layout_width="284dp"
            android:layout_height="41dp"
            android:id="@+id/Haslo" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/divider"
            app:layout_constraintVertical_bias="0.0" android:textSize="30sp" android:textAlignment="center"/>
    <TextView
            android:text="@string/prawie_wisielec_1_0"
            android:layout_width="151dp"
            android:layout_height="49dp"
            android:id="@+id/textView6" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" app:layout_constraintVertical_bias="0.061"
            android:textAlignment="center" android:textSize="18sp"/>
    <Button
            android:text="@string/losuj_has_o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/randomWord"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.346" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.09"
            android:onClick="randomWord" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/wynik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resultGame"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/divider"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.32999998"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent" android:enabled="true"/>
    <TextView
            android:text="@string/wpisz_liter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoInsert" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.898" android:textSize="18sp"
            android:textAllCaps="false"/>
</android.support.constraint.ConstraintLayout>